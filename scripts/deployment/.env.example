# Photonic Backend Configuration
# Copy this file to .env and modify as needed

# Server Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/photobooth.db

# Camera Settings
# Options: python-gphoto2, mock
CAMERA_PROVIDER=python-gphoto2

# Python Camera Service URL
CAMERA_SERVICE_URL=ws://localhost:8000

# Payment Gateway (Midtrans)
# MIDTRANS_SERVER_KEY=your_server_key_here
# MIDTRANS_CLIENT_KEY=your_client_key_here
# MIDTRANS_ENVIRONMENT=sandbox

# WhatsApp Delivery
# WHATSAPP_PROVIDER=fonnte
# WHATSAPP_API_KEY=your_api_key_here

# Email Alerts (Gmail SMTP)
# Uncomment and configure to enable email alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=yourname@gmail.com
# SMTP_PASS=your_app_password_here
# ALERT_FROM=yourname@gmail.com
# ALERT_TO=admin@example.com

# Analytics (Optional)
# BOOTH_ID=booth-001
# CENTRAL_SERVER_URL=https://analytics.example.com
# CENTRAL_SERVER_API_KEY=your_key_here

# Logging
LOG_LEVEL=info

# Session Settings
SESSION_TIMEOUT_MINUTES=30

# Print Settings
DEFAULT_PRINTER=PhotonicPrinter
DEFAULT_PAPER_SIZE=A3
