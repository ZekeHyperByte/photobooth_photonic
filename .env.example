# Photonic Photobooth Environment Configuration

# ============================================
# Camera Settings
# ============================================

# Camera provider type
# Options: edsdk | edsdk-v2 | gphoto2 | python-gphoto2 | webcam | mock
# - Linux: python-gphoto2 (recommended - fast Python service)
# - Linux (legacy): gphoto2 (slow CLI-based)
# - Windows: edsdk-v2
CAMERA_PROVIDER=python-gphoto2

# Python Camera Service (for python-gphoto2 provider)
# These are the default values, only change if running on different port
PYTHON_CAMERA_SERVICE_URL=http://localhost:8000
PYTHON_CAMERA_SERVICE_WS_URL=ws://localhost:8000

# Photo storage paths
TEMP_PHOTO_PATH=./data/photos
PROCESSED_PATH=./data/processed
TEMPLATES_PATH=./data/templates
THUMBNAILS_PATH=./data/thumbnails

# Live view settings
LIVEVIEW_FPS=24
LIVEVIEW_TRANSPORT=http

# Capture settings
CAPTURE_TIMEOUT_MS=30000
CAPTURE_QUEUE_MODE=reject

# ============================================
# Server Settings
# ============================================

NODE_ENV=development
BACKEND_PORT=4000
DATABASE_PATH=./data/photobooth.db

# Admin panel
ADMIN_PIN=1234
ADMIN_PORT=4001

# ============================================
# Payment Settings (Optional)
# ============================================

# Payment provider: mock | midtrans | xendit | stripe
PAYMENT_PROVIDER=mock

# Midtrans (if using midtrans provider)
# MIDTRANS_SERVER_KEY=your_server_key
# MIDTRANS_CLIENT_KEY=your_client_key
# MIDTRANS_ENVIRONMENT=sandbox

# ============================================
# WhatsApp Settings (Optional)
# ============================================

WHATSAPP_PROVIDER=fonnte
# WHATSAPP_API_KEY=your_api_key

# ============================================
# Sync Settings (Optional)
# ============================================

BOOTH_ID=booth-001
# CENTRAL_SERVER_URL=
# CENTRAL_SERVER_API_KEY=
# SYNC_INTERVAL_MS=3600000
