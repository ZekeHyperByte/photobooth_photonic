    "@photonic/config": "workspace:*",
    "@photonic/types": "workspace:*",
    "@photonic/utils": "workspace:*",
    "@types/sharp": "^0.32.0",
    "axios": "^1.6.2",
    "better-sqlite3": "^12.6.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "form-data": "^4.0.0",
    "fastify": "^4.25.1",
    "gphoto2": "^0.3.2",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.4.3",
    "nanoid": "^3.3.7",
    "sharp": "^0.33.5"
