# Server
NODE_ENV=development
PORT=4000

# Database
DATABASE_PATH=./data/photobooth.db

# Camera Settings (integrated in backend - no separate bridge service)
TEMP_PHOTO_PATH=./temp
MOCK_CAMERA=true
USE_WEBCAM=false

# Windows Only: Path to digiCamControl installation
# Default: C:\Program Files\digiCamControl
# Only set this if you installed digiCamControl to a custom location
# DIGICAMCONTROL_PATH=C:\Program Files\digiCamControl

# DigiCamControl Webserver (Windows only)
# Enable webserver API for live view and async capture with polling
DIGICAMCONTROL_WEBSERVER_ENABLED=false
DIGICAMCONTROL_WEBSERVER_HOST=localhost
DIGICAMCONTROL_WEBSERVER_PORT=5513
DIGICAMCONTROL_WEBSERVER_TIMEOUT_MS=30000
DIGICAMCONTROL_POLL_INTERVAL_MS=500

# Linux: Uses gphoto2 automatically (install libgphoto2-dev package)

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your_server_key_here
MIDTRANS_CLIENT_KEY=your_client_key_here
MIDTRANS_ENVIRONMENT=sandbox

# WhatsApp Delivery
WHATSAPP_PROVIDER=fonnte
WHATSAPP_API_KEY=your_api_key_here

# Central Analytics Sync
BOOTH_ID=booth-001
CENTRAL_SERVER_URL=https://photonic-analytics.vercel.app
CENTRAL_SERVER_API_KEY=your-api-key
SYNC_INTERVAL_MS=3600000
